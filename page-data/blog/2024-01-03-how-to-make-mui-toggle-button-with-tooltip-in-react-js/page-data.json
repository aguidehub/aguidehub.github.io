e":"media/template/reactjs.jpg"}},"prev":{"frontmatter":{"title":"How to change mui toggle button selected color in react js?"},"fields":{"slug":"/blog/2024-01-04-how-to-change-mui-toggle-button-selected-color-in-react-js/"}},"next":{"frontmatter":{"title":"How to make mui toggle button lowercase in react js?"},"fields":{"slug":"/blog/2024-01-02-how-to-make-mui-toggle-button-lowercase-in-react-js/"}}},"pageContext":{"slug":"/blog/2024-01-03-how-to-make-mui-toggle-button-with-tooltip-in-react-js/","prevSlug":"/blog/2024-01-04-how-to-change-mui-toggle-button-selected-color-in-react-js/","nextSlug":"/blog/2024-01-02-how-to-make-mui-toggle-button-lowercase-in-react-js/"}},
